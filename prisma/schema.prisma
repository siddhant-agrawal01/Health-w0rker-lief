generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  MANAGER
  CARE_WORKER
}

model User {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String?
  role       Role     @default(CARE_WORKER)
  hospitalId String?
  hospital   Hospital? @relation(fields: [hospitalId], references: [id])
  shifts     Shift[]
}

model Hospital {
  id        String  @id @default(uuid())
  name      String
  latitude  Decimal
  longitude Decimal
  radius    Float   // Radius in kilometers for clock-in perimeter
  users     User[]
}

model Shift {
  id         String   @id @default(uuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  startTime  DateTime // Changed from String
  endTime    DateTime? // Changed from String?
  latitude   Float
  longitude  Float
  note       String?
}